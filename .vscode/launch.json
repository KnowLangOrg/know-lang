{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Know Lang Parse",
      "type": "debugpy",
      "request": "launch",
      "module": "knowlang.cli",
      "args": [
        "--v",
        "parse",
        "."
      ]
    },
    {
      "name": "Know Lang Chat",
      "type": "debugpy",
      "request": "launch",
      "module": "knowlang.cli",
      "args": [
        "--v",
        "chat"
      ]
    },
    {
      "name": "MCP Know Lang",
      "type": "debugpy",
      "request": "launch",
      "module": "knowlang.cli",
      "args": [
        "--v",
        "mcp",
        "serve"
      ],
      "justMyCode": false
    },
    {
      "name": "Know Lang Evaluation Preparation",
      "type": "debugpy",
      "request": "launch",
      "module": "knowlang.cli",
      "args": [
        "--v",
        "--config", "settings/eval_config.json",
        "evaluate",
        "prepare",
      ]
    },
    {
      "name": "Know Lang Evaluation Run",
      "type": "debugpy",
      "request": "launch",
      "module": "knowlang.cli",
      "args": [
        "--v",
        "--config", "settings/eval_config.json",
        "evaluate",
        "run",
        "--limit", "100",
      ]
    },
    {
      "name": "Generate Reranking Data",
      "type": "debugpy",
      "request": "launch",
      "module": "knowlang.cli",
      "args": [
        "--v",
        "--config", "settings/eval_config.json",
        "evaluate",
        "run",
        "--limit", "10",
        "--output", "datasets/reranking_dataset",
        "--generate-reranking-data"
      ]
    },
      {
      "name": "WIP",
      "type": "debugpy",
      "request": "launch",
      "module": "knowlang.assets",
      "args": [
      ],
      "justMyCode": false
    }
  ]
}